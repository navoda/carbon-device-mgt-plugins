    <TaskConfiguration>
        <Operations>
            <Operation>
                <Name>DEVICE_INFO</Name>
                <RecurrentTimes>1</RecurrentTimes>
            </Operation>
            <Operation>
                <Name>APPLICATION_LIST</Name>
                <RecurrentTimes>5</RecurrentTimes>
            </Operation>
            <Operation>
                <Name>DEVICE_LOCATION</Name>
                <RecurrentTimes>1</RecurrentTimes>
            </Operation>
        </Operations>
